<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>
<%= link_to 'Volver al inicio', restaurants_path, class: "btn btn-primary" %>
<%= link_to 'Escribir un review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> ------- <span><%= review.rating %> Estrellas </span></li>
  <% end %>
</ul>
